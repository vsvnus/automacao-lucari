# ===================================
# Servidor
# ===================================
PORT=3000
NODE_ENV=production

# ===================================
# Meta WhatsApp Business API
# ===================================
META_APP_SECRET=seu_app_secret_aqui
META_VERIFY_TOKEN=seu_verify_token_customizado_aqui

# ===================================
# Google Service Account
# ===================================
# Caminho para o arquivo JSON de credenciais da Service Account
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=config/google-credentials.json

# ===================================
# Configurações
# ===================================
# Ativar logs detalhados (true/false)
DEBUG_MODE=false

# Número máximo de tentativas ao inserir na planilha
MAX_RETRIES=3

# Intervalo entre tentativas (ms)
RETRY_DELAY=2000

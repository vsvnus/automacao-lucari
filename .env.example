# ===================================
# Servidor
# ===================================
PORT=3000
NODE_ENV=production

# ===================================
# PostgreSQL
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/leads_db

# ===================================
# Sessão (Auth)
# ===================================
SESSION_SECRET=dev-secret-change-in-production

# ===================================
# Cross-Service URLs
# ===================================
SDR_API_URL=http://localhost:3001
CALC_API_URL=http://localhost:3002

# ===================================
# Google Service Account
# ===================================
# Em produção: use GOOGLE_CREDENTIALS_B64 (base64 encoded JSON)
# Para converter: cat credentials.json | base64 | tr -d '\n'
GOOGLE_CREDENTIALS_B64=eyJ0eXBlOiJzZXJ2aWNlX2FjY291bnQiLC4uLn0=

# Alternativa: GOOGLE_CREDENTIALS_JSON (pode ter problemas com newlines em Docker)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# Em desenvolvimento: use o arquivo local
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=config/google-credentials.json

# ===================================
# Configurações
# ===================================
DEBUG_MODE=false
MAX_RETRIES=3
RETRY_DELAY=2000

# ===================================
# Webhook Auth
# ===================================
WEBHOOK_SECRET=
